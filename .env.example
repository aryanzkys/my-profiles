# Public base path when deploying under a subpath (optional)
# NEXT_PUBLIC_BASE_PATH=""

# Simple client-side admin gate
# Set this to a strong secret and share only with yourself
# NEXT_PUBLIC_ADMIN_KEY="change-me"

# MongoDB connection for Netlify Functions
# MONGODB_URI="mongodb+srv://username:password@cluster.mongodb.net/"
# MONGODB_DB="myprofiles"
# MONGODB_COLLECTION="myprofiles"

# Optional: MongoDB Data API (recommended on Netlify to avoid IP allowlist/TLS issues)
# MONGODB_DATA_API_BASEURL="https://<region>.data.mongodb-api.com/app/<app-id>/endpoint/data/v1"
# MONGODB_DATA_API_KEY="<your-data-api-key>"
# MONGODB_DATA_SOURCE="Cluster0" # Data API dataSource name
# MONGODB_DATA_API_DB="myprofiles"      # optional override
# MONGODB_DATA_API_COLLECTION="myprofiles" # optional override
